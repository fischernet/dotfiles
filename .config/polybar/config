modules-center = arw_r2 mpd_1 mpd_2 mpd_3 mpd_4 arw_l1
modules-right = arw_rr1 cpu arw_l2 mem arw_l3 temp arw_l5 bat arw_l6 fsys arw_l7 vol 

offset-x = 0
offset-y = 0 
tray-position = right
tray-background = ${colors.true_black}
tray-padding = 4

